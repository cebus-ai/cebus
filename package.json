{
  "name": "cebus",
  "version": "0.1.0",
  "description": "Multi-model group chat CLI - communicate with multiple AI models simultaneously",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./orchestration": {
      "types": "./dist/orchestration/index.d.ts",
      "import": "./dist/orchestration/index.js"
    }
  },
  "bin": {
    "cebus": "./bin/cebus.js"
  },
  "files": [
    "dist",
    "bin",
    "src/orchestration/prompts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "node --import tsx src/cli/index.ts",
    "dev:bun": "bun run src/cli/index.ts",
    "start": "node --import tsx src/cli/index.ts",
    "start:bun": "bun run src/cli/index.ts",
    "chat": "bun run src/cli/index.ts chat",
    "prebuild": "node scripts/ensure-build-deps.js",
    "build": "tsup",
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:bun": "bun build src/index.ts --outdir dist --target node",
    "prepublishOnly": "npm run build",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "studio": "npx @langchain/langgraph-cli dev",
    "release": "node scripts/publish-to-public.js",
    "release:dry": "node scripts/publish-to-public.js --dry-run"
  },
  "keywords": [
    "ai",
    "chat",
    "cli",
    "multi-model",
    "openai",
    "anthropic",
    "copilot",
    "gemini",
    "ollama",
    "llm",
    "langgraph",
    "group-chat"
  ],
  "author": "Cebus Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/cebus-ai/cebus.git"
  },
  "homepage": "https://github.com/cebus-ai/cebus",
  "bugs": {
    "url": "https://github.com/cebus-ai/cebus/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@langchain/langgraph": "^1.1.4",
    "@langchain/langgraph-checkpoint-sqlite": "^1.0.1",
    "@langchain/mcp-adapters": "^1.1.2",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.4",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "react": "^19.2.4",
    "shiki": "^3.22.0",
    "zod": "^4.3.6"
  },
  "optionalDependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@github/copilot-sdk": "^0.1.23",
    "@google/genai": "^1.40.0",
    "@langchain/anthropic": "^1.3.15",
    "@langchain/google-genai": "^2.1.15",
    "@langchain/ollama": "^1.2.2",
    "@langchain/openai": "^1.2.5",
    "openai": "^6.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "minimatch": "^10.0.1"
  },
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.3.0"
  }
}
